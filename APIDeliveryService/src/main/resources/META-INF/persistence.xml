<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">


  <persistence-unit name="jpa-mysql">
    <class>com.example.apideliveryservice.dto.CompanyMemberDto</class>
    <class>com.example.apideliveryservice.dto.GeneralMemberDto</class>
    <class>com.example.apideliveryservice.dto.CompanyFoodDto</class>
